<div class="container vh-100 d-flex flex-column align-items-center justify-content-start">
  <h1 class="pt-5 pb-2">Start your journey to getting hired</h1>

  <div class="d-flex justify-content-center align-items-center w-50 border shadow rounded-4 p-2 m-2">
    <div class="col-md-10 p-0 m-0">

      <div class="login-box">
        <h2 class="text-center">Sign up now</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <%# TODO: Add validations on email and password, if not yet handled by devise %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "rounded-4" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "rounded-4" } %>
          </div>

            <p class="fs-6 fw-light">By signing up you agree to our <%= link_to "Terms and Conditions", "/#" %> and <%= link_to "Privacy Policy", "/#" %></p>
          <div class="form-actions text-center pb-3">
            <%= f.button :submit, "Sign up", class: "btn-apply", style: "width: 520px;"%>
          </div>
        <% end %>
        <p>Already have an account? <%= link_to "Log In", new_user_session_path %></p>
      </div>
    </div>
  </div>
</div>
