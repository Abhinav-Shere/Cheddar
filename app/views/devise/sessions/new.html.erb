<div class="container login-div">
    <h1 class="login-h1">Let's get you hired</h1>
    <h4 class="login-h4">Apply to thousands of jobs in one-click and track your status.</h4>

    <div class="login-box" >
      <div class="col-md-10">
          <h2 class="login-box-h2">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "rounded-4", placeholder: "Email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "rounded-4", placeholder: "Password" } %>
              <%= f.input :remember_me, as: :boolean, input_html: { class: 'remember-me', checked: true } if devise_mapping.rememberable? %>
              <p class="login-forgot-password">
                <%= link_to "Forgot your password?", new_password_path(resource_name) %>
              </p>
            </div>

            <div class="form-actions text-center pb-3">
              <%= f.button :submit, "Log in", class: "btn-login"%>
            </div>
          <% end %>

          <p class="login-non-account">Don't yet have an account? <%= link_to "Sign Up", new_user_registration_path %></p>
        </div>
      </div>
    </div>
</div>
