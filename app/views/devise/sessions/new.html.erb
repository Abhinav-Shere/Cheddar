<div class="container vh-100 d-flex flex-column align-items-center justify-content-center">
    <h1 class="pt-5 pb-2">Continue getting hired</h1>

    <div class="d-flex justify-content-center align-items-center w-50 border shadow rounded-4 p-2 m-2 " >
      <div class="col-md-10 p-0 m-0">

        <div class="login-box">
          <h2 class="text-center py-2">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs w-100">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "rounded-4" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "rounded-4" } %>
              <%= f.input :remember_me, as: :boolean, input_html: { class: 'remember-me', checked: true } if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions text-center pb-3">
              <%= f.button :submit, "Log in", class: "btn-apply", style: "width: 520px;" %>
            </div>
          <% end %>

          <p class="m-0">Don't yet have an account? <%= link_to "Sign Up", new_user_registration_path %></p>
          <p class="py-2">
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </p>
        </div>
      </div>
    </div>
</div>
