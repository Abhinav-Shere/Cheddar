<%= simple_form_for user_detail, url: user_details_path, html: { method: :put, class: "md:col-span-2" } do |f| %>
  <div class="grid gap-x-6 gap-y-8 sm:max-w-6xl sm:grid-cols-6">
    <div class="sm:col-span-3">
      <label for="first-name" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">First name</label>
      <div class="mt-2">
        <%= f.input :first_name,
          required: true,
          label: false,
          autofocus: true,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="sm:col-span-3">
      <label for="last-name" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Last name</label>
      <div class="mt-2">
        <%= f.input :last_name,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="email" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Email address</label>
      <div class="mt-2">
        <%= f.input :email,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="preferred-pronoun-select" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">What are your preferred pronouns?</label>
      <div class="mt-2">
        <%= f.input :preferred_pronoun_select,
          collection: ['He/Him', 'She/Her', 'They/Them', 'Other', 'Prefer not to say'],
          required: true,
          label: false,
          autofocus: false,
          type: :select,
          input_html: { class: "block w-full rounded-md border-0 py-1.5 bg-white/5 dark:hover:bg-zinc-900 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6" }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="preferred-pronoun-text" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">If other then please specify:</label>
      <div class="mt-2">
        <%= f.input :preferred_pronoun_text,
          required: false,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="phone_number" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Phone Number</label>
      <div class="mt-2">
        <%= f.input :phone_number,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="address-first" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Address first</label>
      <div class="mt-2">
        <%= f.input :address_first,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="address-second" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Address second</label>
      <div class="mt-2">
        <%= f.input :address_second,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="post-code" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Post code</label>
      <div class="mt-2">
        <%= f.input :post_code,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="city" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">City</label>
      <div class="mt-2">
        <%= f.input :city,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="linkedin-profile" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Linkedin profile</label>
      <div class="mt-2">
        <%= f.input :linkedin_profile,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="github-profile-url" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Github profile url</label>
      <div class="mt-2">
        <%= f.input :github_profile_url,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="website-url" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Website url</label>
      <div class="mt-2">
        <%= f.input :website_url,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="salary-expectation-figure" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">What is you annual salary expectation?</label>
      <div class="mt-2">
        <%= f.input :salary_expectation_figure,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="right-to-work" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Do you have the right to work in the UK without a visa?</label>
      <div class="mt-2">
        <%= f.input :right_to_work,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="notice-period" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">What is your notice period in weeks?</label>
      <div class="mt-2">
        <%= f.input :notice_period,
          required: true,
          label: false,
          autofocus: false,
          input_html: { class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
    </div>
    <div class="col-span-full">
      <label for="resumes" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Resumes</label>
      <div class="mt-2">
        <% user_detail.resumes.each do |resume| %>
          <%= f.input :'resumes', as: :hidden, input_html: { multiple: true, value: resume.signed_id } %>
        <% end %>
        <%= f.input :resumes,
          as: :file,
          required: false,
          label: false,
          autofocus: false,
          input_html: { multiple: true, direct_upload: true, class: 'block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6' }
        %>
      </div>
      <% if user_detail.resumes.attached? %>
        <div class="block w-full py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <ul role="list" class="divide-y divide-gray-100 rounded-md border border-gray-200">
              <% user_detail.resumes.each do |resume| %> 
                <li class="flex items-center justify-between py-4 pl-4 pr-5 text-sm leading-6">
                  <div class="flex w-0 flex-1 items-center">
                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
                    </svg>
                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                      <span class="truncate font-medium"><%= resume.filename.to_s %></span>
                      <span class="flex-shrink-0 text-gray-400"><%= filesize_in_mb(resume) %></span>
                    </div>
                  </div>
                  <div class="ml-4 flex flex-shrink-0 space-x-4">
                    <%= link_to "Download", url_for(resume), class: "rounded-md bg-white font-medium text-indigo-600 hover:text-indigo-500", target: "_blank" %>
                    <span class="text-gray-200" aria-hidden="true">|</span>
                    <%= link_to "Remove", attachment_path(resume), data: { turbo_method: :delete }, method: :delete, class: "rounded-md bg-white font-medium text-gray-900 hover:text-gray-800" %>
                  </div>
                </li>
              <% end %>
            </ul>
          </dd>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mt-8 flex">
    <%= f.button :submit, frequent_asked_information_button_title, class: "flex w-full justify-center cursor-pointer rounded-md !bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white dark:text-gray-900 shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>