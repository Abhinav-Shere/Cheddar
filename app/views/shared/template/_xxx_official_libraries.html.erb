<% library_items = [
 {
    name: 'PHP',
    description:
      'A popular general-purpose scripting language that is especially suited to web development.',
    link_path: '#',
    icon_name: 'php',
  },
  {
    name: 'Ruby',
    description:
      'A dynamic, open source programming language with a focus on simplicity and productivity.',
    link_path: '#',
    icon_name: 'ruby',
  },
  {
    name: 'Node.js',
    description:
