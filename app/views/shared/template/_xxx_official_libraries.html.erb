<div class="not-prose mt-4 grid grid-cols-1 gap-x-6 gap-y-10 border-t border-zinc-900/5 pt-10 sm:grid-cols-2 xl:max-w-none xl:grid-cols-3 dark:border-white/5">
  <% library_items.each do |library| %>
    <div  class="flex flex-row-reverse gap-6">
      <div class="flex-auto">
        <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">
          <%= library[:name] %>
        </h3>
        <p class="mt-1 text-sm text-zinc-600 dark:text-zinc-400">
          <%= library[:description] %>
        </p>
        <p class="mt-4">
          <%= link_to library[:link_path],  class: link_klasses(theme: :mauve)  do %>
            Read more   <%= inline_svg_tag('template/icons/right_arrow.svg') %>
          <% end %>
        </p>
      </div>
      <%= image_tag "template/icons/logos/libraries/#{library[:icon_name]}.svg", class: 'h-12 w-12' %>
    </div>
  <% end %>
</div>
