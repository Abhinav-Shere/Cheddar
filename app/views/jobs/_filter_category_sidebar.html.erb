<div class="col-sm-3" id="jobs-index-left-section" data-job-index-toggle-target="leftSection">

  <div class="d-flex justify-content-between bg-white pt-1">
    <h6 id="jobs-index-left-section-title">
      <%= @jobs.count %>
      Jobs
    </h6>
  </div>

  <% section_titles = ['Seniority', 'Location', 'Job Roles', 'Employment Type', 'Company'] %>
  <% icons = ["fa-solid fa-stairs", "fa-solid fa-earth-americas", "fa-solid fa-person-chalkboard", "fa-solid fa-id-card", "fa-solid fa-building-user"] %>

  <% @resources.each_with_index do |(resource, data), index| %>
    <%= render partial: 'filter_category_sidebar_section', locals: {title: section_titles[index], resource: resource, resources: data, icon: icons[index]} %>
  <% end %>

</div>
