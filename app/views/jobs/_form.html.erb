<div class="container vh-180 d-flex align-items-center justify-content-center">
  <div class="d-flex flex-column align-items-center justify-content-center w-50 border shadow-sm rounded-4 p-2 m-4">
    <h2 class="text-center pb-2">Add job to Cheddar</h2>
    <div class="col-md-10 p-0 m-0">
      <div class="form-box">
        <%= simple_form_for [@job] do |f| %>
          <%= f.association :company, collection: Company.all, :label_method => lambda { |company| "#{company.company_name}"}, prompt: "Choose a company", label_html: { style: 'font-style: italic;' } %>
          <%= f.input :job_title, label_html: { style: 'font-style: italic;' }, input_html: { class: 'rounded-4' } %>
          <%= f.input :job_description, label_html: { style: 'font-style: italic;' }, input_html: { class: 'rounded-4' } %>
          <%= f.input :salary, label_html: { style: 'font-style: italic;' }, input_html: { class: 'rounded-4' } %>
          <%= f.input :job_posting_url, label_html: { style: 'font-style: italic;' }, input_html: { class: 'rounded-4' } %>
          <%= f.input :application_deadline, label_html: { style: 'font-style: italic;' }, input_html: { class: 'rounded-4' } %>
          <%= f.input :date_created, label_html: { style: 'font-style: italic;' }, input_html: { class: 'rounded-4' } %>
          <%= f.submit 'Add this job', class: 'btn btn-add-info'%>
        <% end %>
      </div>
    </div>
  </div>
</div>

