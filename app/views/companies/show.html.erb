<div class="container pt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex">
        <%= image_tag("https://source.unsplash.com/random/300x300") %>
        <%= image_tag("https://source.unsplash.com/random/300x300") %>
        <%= image_tag("https://source.unsplash.com/random/300x300") %>
        <div>
          <%= image_tag("https://source.unsplash.com/random/300x150") %>
          <%= image_tag("https://source.unsplash.com/random/150x150") %>
          <%= image_tag("https://source.unsplash.com/random/150x150") %>
        </div>
      </div>
      <div class="d-flex align-items-center justify-content-between pb-4">
        <div class="d-flex align-items-center">
          <%= image_tag("https://logo.clearbit.com/#{@company.company_website_url}",
                        onerror: "this.src='https://i.pinimg.com/736x/ec/d9/c2/ecd9c2e8ed0dbbc96ac472a965e4afda.jpg'",
                        style: "width: 60px; height: 60px;") %>
          <h1 class="ms-4 mb-0"><%= @company.company_name %></h1>
        </div>
        <ul class="mb-0">
          <%# TODO: Add favicons for these %>
          <% if @company.company_website_url.present? %>
            <li><%= link_to "Website", @company.company_website_url %></li>
          <% end %>
          <% if @company.url_linkedin.present? %>
            <li><%= link_to "LinkedIn", @company.url_linkedin %></li>
          <% end %>
          <% if @company.url_careers.present? %>
            <li><%= link_to "Careers Site", @company.url_careers %></li>
          <% end %>
          <% if @company.url_ats_main.present? %>
            <li><%= link_to "ATS Site", @company.url_ats_main %></li>
          <% end %>
        </ul>
      </div>
      <%# TODO: Setup Glassdoor & Trustpilot APIs %>
      <div class="company-description">
        <%= @company_description %>
      </div>
      <div class="row">
        <div class="col-4">
          <h3>Industry</h3>
          <p><%= @company.industry %></p>
          <p><%= @company.industry_subcategory %></p>
          <h3>Company size</h3>
          <h3>Specialities</h3>
        </div>
        <div class="col-8">
          <h2>Current Job Openings</h2>
          <p>Total live jobs: <%= @jobs.count %></p>
          <ul>
            <% @jobs.each do |job| %>
              <%= link_to job_path(job), target: "_blank" do %>
                <li><%= job.job_title %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
      <%# TODO: Add gallery of images like Airbnb %>
    </div>
  </div>
</div>
